<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="myshop.sky.com.shop.Activity.Activity.Activity.Activity_properties">

<include layout="@layout/toolbar2"/>

<android.support.v7.widget.CardView
    app:cardBackgroundColor="@color/light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textTilePr"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="گوشی آیفون"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.v7.widget.CardView>

<myshop.sky.com.shop.Activity.Activity.Class.TypeWriter
    android:lineSpacingExtra="10dp"
    android:textSize="16sp"
    android:textColor="@color/blackllight"
    android:id="@+id/textPr"
    android:layout_margin="10dp"
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>
