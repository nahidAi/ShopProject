<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/light"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imageBasket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/error" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTitleBasket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:lines="2"
                    android:text="گوشی آیفون"
                    android:textColor="@color/blackllight"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textColorBasket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="رنگ قرمز"
                    android:textColor="@color/blackllight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textGarantyBasket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="گارانتی دو ساله آوا"
                    android:textColor="@color/blackllight"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textNumberBasket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:text="2"
                    android:textColor="@color/blackllight"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:background="#e1e1e1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right"
                android:text="قیمت محصول :"
                android:textColor="@color/blackllight" />

            <TextView
                android:id="@+id/priceBasket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right"
                android:text="32132132"
                android:textColor="@color/red" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:background="#e1e1e1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right"
                android:text="قیمت کل محصول :"
                android:textColor="@color/blackllight" />

            <TextView
                android:id="@+id/textAllpriceBasket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right"
                android:text="32132132"
                android:textColor="@color/green" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"

            />

        <TextView
            android:id="@+id/textDeleteBasket"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1"
            android:gravity="center_vertical|left"
            android:text="حذف"
            android:textColor="@color/red"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
