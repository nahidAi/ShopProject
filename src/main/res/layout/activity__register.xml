<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layoutDirection="rtl"
android:orientation="vertical"
tools:context="myshop.sky.com.shop.Activity.Activity.Activity.Activity_Register">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageUserRegister"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/userprofile" />

    <TextView
        android:id="@+id/textTakeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="دریافت عکس"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:gravity="right"
        android:id="@+id/edEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_email_black_24dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/gray"
        android:hint="ایمیل :"
        android:inputType="textEmailAddress" />

    <EditText
        android:gravity="right"
        android:id="@+id/edPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_lock_open_black_24dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/gray"
        android:hint="رمز عبور :"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/chkPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="نمایش رمز عبور" />


</LinearLayout>

<TextView
    android:id="@+id/textRegsiter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/red"
    android:gravity="center"
    android:padding="12dp"
    android:text="عضویت در فروشگاه"
    android:textColor="@color/light"
    android:textSize="16sp" />
</RelativeLayout>
